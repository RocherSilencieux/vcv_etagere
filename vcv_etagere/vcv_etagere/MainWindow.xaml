<Window x:Class="vcv_etagere.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:vcv_etagere"
        Title="Rack"
        Height="500"
        Width="900">

    <Grid x:Name="MainGrid" Background="#222"

        MouseRightButtonDown="MainGrid_RightClick">

        <!-- Layer modules -->
        <StackPanel Orientation="Horizontal"
                Panel.ZIndex="0">
            <Canvas x:Name="ModuleLayer"
                    Panel.ZIndex="1"/>
        

        </StackPanel>

        <Canvas x:Name="CableLayer"
        Panel.ZIndex="0"
        IsHitTestVisible="True"/>



    </Grid>



</Window>
