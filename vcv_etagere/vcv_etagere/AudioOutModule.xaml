<UserControl x:Class="vcv_etagere.AudioOutModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="180"
             Height="300">

    <Border BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="8"
            Background="#222"
            Padding="10">

        <StackPanel>

            <TextBlock Text="MASTER OUT"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Master Volume -->
            <TextBlock Text="Volume"
                       Foreground="White"
                       Margin="0,0,0,5"/>

            <Slider x:Name="MasterSlider"
                    Minimum="0"
                    Maximum="1"
                    Value="0.8"
                    ValueChanged="MasterSlider_ValueChanged"/>

            <!-- Mute -->
            <ToggleButton x:Name="MuteButton"
                          Content="Mute"
                          Margin="0,15,0,15"
                          Checked="MuteButton_Checked"
                          Unchecked="MuteButton_Checked"/>

            <!-- Vu Meter -->
            <ProgressBar x:Name="VuMeter"
                         Height="20"
                         Minimum="0"
                         Maximum="0.5"/>

            <Ellipse x:Name="InputPort"
                 Width="16"
                 Height="16"
                 Fill="LightBlue"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Bottom"
                 Margin="5"/>


        </StackPanel>
    </Border>
</UserControl>
